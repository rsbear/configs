{
  "vscode-neovim.neovimPath": "/usr/local/bin/nvim",
  "vscode-neovim.neovimInitPath": "/Users/rsbear/.config/nvim/init.vim",
  "editor.fontSize": 15,
  "editor.lineHeight": 28,
  "editor.fontFamily": "'Office Code Pro', 'Source Code Pro', 'Roboto Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontWeight": "400",
  "workbench.fontAliasing": "default",
  "editor.cursorWidth": 0,
  "editor.cursorStyle": "line",
  "editor.tabSize": 2,
  "editor.minimap.enabled": false,
  "editor.wordWrap": "on",
  "editor.cursorBlinking": "solid",
  "explorer.openEditors.visible": 0,
  "explorer.autoReveal": false,
  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.lock": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "node_modules": true
  },
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/tmp": true,
    "node_modules": true
  },
  "C_Cpp.intelliSenseCacheSize": 0,
  "multiCommand.commands": [
    {
      "command": "multiCommand.openSidebar",
      "sequence": [
        // "workbench.action.toggleSidebarVisibility",
        "workbench.files.action.showActiveFileInExplorer",
        "workbench.action.focusSideBar",
      ]
    },
    {
      "command": "multiCommand.sidebarSelect",
      "sequence": [
        "list.select",
        "workbench.action.toggleSidebarVisibility",
      ]
    },
    {
      "command": "multiCommand.closeSidebar",
      "sequence": [
        "workbench.action.closeSidebar",
      ]
    }
  ],
  "[yaml]": {
    "editor.formatOnSave": false
  },
  "workbench.activityBar.visible": true,
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#00f1a1"
  },
  "window.zoomLevel": 0,
